<!DOCTYPE html>
<html>
  <head>
    <title>Blog Manerin</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <%= link_to "My Blog", root_path, class: 'navbar-brand'%>
      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <% if user_signed_in? %>
              <%= link_to 'New Post', new_post_path, class: 'nav-link' %>
            <%else%>
              <%= link_to 'Admin login', new_user_session_path, class: 'nav-link' %>
            <%end%>
          </li>
        </ul>
      </div>
    </nav>
<% if flash[:notice] %>
  <div id="notice" class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= notice %>
  </div>
<% else %>
  <!-- nesse caso não há flash notice/toast a exibir -->
<%end%>
<div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
  <div class="card-header">Seja Bem Vindo</div>
  <div class="card-body">
    <h4 class="card-title">Blog Manerin</h4>
    <p class="card-text">Lorem Ipsum</p>
  </div>
</div>
    <div class="col-md-10 col-md-offset-1">
      <%= yield %>
    </div>
  </body>
</html>
